<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/d12_size">
    <remix.myplayer.lyric.LrcView
        android:visibility="gone"
        android:id="@+id/lrc_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d10_size"
        android:layout_marginRight="@dimen/d10_size"
        android:paddingLeft="@dimen/d30_size"
        android:paddingRight="@dimen/d30_size"
        android:layout_marginTop="@dimen/d8_size"
        android:textColor="@color/day_enable_text_color"/>
    <remix.myplayer.lyric.LyricRecyclerView
        android:id="@+id/lrc_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d30_size"
        android:layout_marginRight="@dimen/d30_size"
        android:layout_marginTop="@dimen/d8_size"
        android:overScrollMode="never"
        android:visibility="visible"/>
</LinearLayout>